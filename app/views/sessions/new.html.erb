<%= form_for @user, url: sessions_path, method: :post do |f| %>
  <ul>
    <li>
      <%= f.label :name %>
      <%= f.email_field :name %>
    </li>
    <li>
      <%= f.label :email %>
      <%= f.email_field :email%>
    </li>
    <%= f.submit "Sign in" %>
  </ul>

<% end %>

<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>